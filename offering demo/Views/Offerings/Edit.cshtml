@model offering_demo.Models.Offering

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="OfferingID" />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-5">
            <h3>EDIT Offering</h3>

            <div class="form-group">
                <!-- Department Dropdown -->
                <label class="control-label">Department</label>
                <select class="form-control" asp-items="ViewBag.DepartmentList">
                    <option value="">Select Department</option>
                </select>

                <!-- Course Dropdown -->
                <label class="control-label">Course</label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CoursesList">
                    <option value="">Select Course</option>
                </select>

                <!-- Instructor Dropdown -->
                <label class="control-label">Instructor</label>
                <select asp-for="InstructorId" class="form-control" asp-items="ViewBag.InstructorList">
                    <option value="">Select Instructor</option>
                </select>
            </div>

            <div class="form-group float-right">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</form>
