@model offering_demo.Models.Offering

@{
    ViewData["Title"] = "Delete Offering";
}

<h3>Are you sure you want to delete this offering?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Course</dt>
    <dd class="col-sm-10">@Model.Course.CourseName</dd>

    <dt class="col-sm-2">Instructor</dt>
    <dd class="col-sm-10">@Model.Instructor.Name</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="OfferingID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
