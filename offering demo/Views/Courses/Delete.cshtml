@model offering_demo.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h3>Are you sure you want to delete this course?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Course Name</dt>
    <dd class="col-sm-10">@Model.CourseName</dd>

    <dt class="col-sm-2">Course Code</dt>
    <dd class="col-sm-10">@Model.CourseCode</dd>

    <dt class="col-sm-2">Credit Hour</dt>
    <dd class="col-sm-10">@Model.CreditHour</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CourseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
