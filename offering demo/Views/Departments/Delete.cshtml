@model offering_demo.Models.Department

@{
    ViewData["Title"] = "Delete Department";
}

<h3>Are you sure you want to delete this department?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Department Name</dt>
    <dd class="col-sm-10">@Model.DepartmentName</dd>

    <dt class="col-sm-2">Acronym</dt>
    <dd class="col-sm-10">@Model.DepartmentAcronym</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DepartmentID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
