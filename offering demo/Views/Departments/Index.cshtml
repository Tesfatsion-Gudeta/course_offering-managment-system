@model IEnumerable<offering_demo.Models.Department>
@{
    ViewData["Title"] = "Department";
    int counter = 1;
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<strong>
    <a asp-action="Create" class="btn btn-success m-1"> ADD COURSE</a>
</strong>

<table class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>#</th>
            <th>Department Name</th>
            <th>Department Acronyms</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var crs in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@crs.DepartmentName</td>
                <td>@crs.DepartmentAcronym</td>
                <td>

                    <a asp-action="Edit" title="Edit Course" asp-route-id="@crs.DepartmentID" class="btn btn-primary m-1"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" title="Delete Course" asp-route-id="@crs.DepartmentID" class="btn btn-danger m-1">
                        <i class="bi bi-trash"></i>
                    </a>

                </td>
            </tr>
            counter++;
        }

    </tbody>
</table>
