@model offering_demo.Models.Semester

@{
    ViewData["Title"] = "Delete Semester";
}

<h3>Are you sure you want to delete this semester?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Semester Name</dt>
    <dd class="col-sm-10">@Model.SemesterName</dd>

    <dt class="col-sm-2">Semester Number</dt>
    <dd class="col-sm-10">@Model.SemesterNo</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SemesterId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
