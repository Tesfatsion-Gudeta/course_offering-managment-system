@model offering_demo.Models.Semester

@{
    ViewData["Title"] = "Create Semester";
}

<h3>Create Semester</h3>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label">Semester Name</label>
        <input asp-for="SemesterName" class="form-control" required />
        <span asp-validation-for="SemesterName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">Semester Number</label>
        <input asp-for="SemesterNo" class="form-control" required />
        <span asp-validation-for="SemesterNo" class="text-danger"></span>
    </div>

    

    <br />
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
