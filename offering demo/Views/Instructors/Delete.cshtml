@model offering_demo.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<h3>Are you sure you want to delete this instructor?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Model.Gender</dd>

    <dt class="col-sm-2">Academic Rank</dt>
    <dd class="col-sm-10">@Model.ARank</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department.DepartmentName</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="InstructorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
